<Application x:Class="Dependency_Navigation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dependency_Navigation"
             xmlns:view="clr-namespace:Dependency_Navigation.MVVM.View"
             xmlns:viewModel="clr-namespace:Dependency_Navigation.MVVM.ViewModel">

    <Application.Resources>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:HomeViewModel}">
            <view:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:InvoiceViewModel}">
            <view:InvoiceView/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
